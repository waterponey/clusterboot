# {{ansible_managed}}
[Unit]
Description=Apache Hadoop Namenode service
Documentation=http://hadoop.apache.org
Requires=network.target remote-fs.target
After=network.target remote-fs.target

[Service]
Type=forking
User=hdfs
Group=hadoop
ExecStart={{ hadoop_home }}/sbin/hadoop-daemon.sh start datanode
ExecStop={{ hadoop_home }}/sbin/hadoop-daemon.sh stop datanode
WorkingDirectory={{ hdfs_workdir }}

[Install]
WantedBy=multi-user.target
